<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#474545"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvGreenBeeEaterTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="40dp"
                android:padding="30dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:text="@string/tvGreenBeeEaterTitle" />

            <ImageView
                android:id="@+id/ivGreenBeeEater"
                android:layout_width="match_parent"
                android:layout_height="230dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvGreenBeeEaterAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:text="@string/tvGreenBeeEaterAbout" />

                <TextView
                    android:id="@+id/tvGreenBeeEaterDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:text="@string/tvGreenBeeEaterDetails" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvGreenBeeEaterFacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:text="@string/tvFacts" />

                <TextView
                    android:id="@+id/tvGreenBeeEaterFact1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:text="@string/tvGreenBeeEaterFact1" />

                <TextView
                    android:id="@+id/tvGreenBeeEaterFact2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:textSize="25sp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:text="@string/tvGreenBeeEaterFact2" />

                <TextView
                    android:id="@+id/tvGreenBeeEaterFact3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:textSize="25sp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:text="@string/tvGreenBeeEaterFact3" />

                <TextView
                    android:id="@+id/tvGreenBeeEaterFact4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:textSize="25sp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:text="@string/tvGreenBeeEaterFact4" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />

            <Button
                android:id="@+id/btnToPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="@string/btnClickToLearnMore" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
